		},
		{
			"name": "2 - Full Security Scan (SAST + DAST + IAST)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Save response for later use",
							"pm.environment.set(\"scan_response\", pm.response.text());",
							"",
							"// Optionally extract first patch for demonstration",
							"if (pm.response.json().results && pm.response.json().results.patch_results) {",
							"    const patches = pm.response.json().results.patch_results;",
							"    if (patches.length > 0) {",
							"        pm.environment.set(\"first_patch_content\", patches[0].patched_code);",
							"        pm.environment.set(\"first_patch_file\", patches[0].file_path || \"/tmp/DVWA/vulnerabilities/sqli/source/low.php\");",
							"    }",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"source_path\": \"/tmp/DVWA\",\n  \"target_url\": \"http://dvwa-app\",\n  \"max_vulnerabilities\": 10,\n  \"enable_sast\": true,\n  \"enable_dast\": true,\n  \"enable_iast\": true,\n  \"generate_patches\": true\n}"
				},
				"url": {
					"raw": "http://localhost:8000/api/v1/e2e/combined-scan",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "8000",
					"path": [
						"api",
						"v1",
						"e2e",
						"combined-scan"
					]
				},
				"description": "Run complete security scan with SAST (static analysis), DAST (OWASP ZAP dynamic testing), and IAST (interactive runtime exploitation). This takes 3-5 minutes."
			},
			"response": []
		},
